$(".all-orders").hide(500);
$(".all-orders").html("<%= j (render partial: 'ordersList',
                                       locals: {orders: @all_orders.delivered_and_confirmed,
                                       mark_as_delivered: false }) %>").hide().fadeIn(800);
<% if @found %>
  $(".all-messages").html("<%= j (render partial: 'home/messages',
                                         locals: {notice: "#{@all_orders.delivered_and_confirmed.count} Orders" })
                            %>").hide().fadeIn(800);
<% else %>
  $(".all-messages").html("<%= j (render partial: 'home/messages',
                                       locals: {alert: "User not found" }) %>").hide().fadeIn(800);
<% end %>
